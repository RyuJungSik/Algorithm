   "source": [
    "n=int(input())\n",
    "\n",
    "day=n\n",
    "t,p=[],[]\n",
    "dp=[0]*(n+1)\n",
    "\n",
    "for i in range(n):\n",
    "    a,b=map(int, input().split(\" \"))\n",
    "    t.append(a)\n",
    "    p.append(b)\n",
    "\n",
    "for i in range(0,n):\n",
    "    if t[i]+i<n+1:\n",
    "        dp[i+t[i]]=max(dp[i+t[i]],dp[i]+p[i])\n",
    "    dp[i+1]=max(dp[i+1],dp[i])\n",
    "\n",
    "print(dp[n])"
   ]
  }
